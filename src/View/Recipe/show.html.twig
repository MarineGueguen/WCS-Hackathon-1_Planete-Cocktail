{% extends 'layout.html.twig' %}


{% block content %}
	<main class="container">
		<h1 class="mt-5 mb-2 text-center text-cocktail">Nous sommes en {{ "now"|date("F", "Europe/Paris") }}</h1>
		<p></p>
		{# <pre>
        {{ dump(recipe) }}
    </pre> #}
		<div class="card m-5 shadow show-card mx-auto">
			<div class="d-flex flex-row flex-start align-items-center">
				<img src="{{ recipe.cocktail }}" class="card-img-top rounded img-thumbnail shadow cocktail-image m-4" alt="picture of a cocktail named {{ recipe.recipe }}">
				<ul class="list-group list-group-flush mx-5">
					<li>Ingr√©dients :</li>
					{% for ingredient in recipes %}
						<li class="list-group-item {% if ingredient.month != date("m/d/Y") %}text-red{% endif %}">{{ ingredient.name }}</li>
					{% endfor %}
				</ul>
			</div>
			<div class="card-body">
				<h2 class="card-title text-center mb-3">{{ recipe.recipe|title }}</h5>
				<p class="card-text mx-4">{{ recipe.description }}</p>
				<div class="d-flex justify-content-center">
					<a href="/recipes?id={{ ingredient.id }}" class="btn-cocktail btn-cocktail-color my-4">Go somewhere</a>
				</div>
			</div>
		</div>
	</main>
{% endblock %}
